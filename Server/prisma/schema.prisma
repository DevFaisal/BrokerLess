// This is your Prisma schema file,
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  phone     BigInt    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  address   address[]
}

model Landlord {
  id              String            @id @default(cuid())
  name            String
  email           String            @unique
  password        String
  phone           BigInt            @unique
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  properties      Property[]
  landlordaddress landlordaddress[]
}

model Property {
  id              String            @id @default(cuid())
  name            String
  description     String
  rent            Int
  landlordId      String
  status          String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  landlord        Landlord          @relation(fields: [landlordId], references: [id])
  PropertyAddress PropertyAddress[]
}

model PropertyAddress {
  id         String    @id @default(cuid())
  street     String
  city       String
  state      String
  zip        String
  country    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Property   Property? @relation(fields: [propertyId], references: [id])
  propertyId String?
}

model address {
  id        String   @id @default(cuid())
  street    String
  city      String
  state     String
  zip       String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  tenantId  String?
}

model landlordaddress {
  id         String    @id @default(cuid())
  street     String
  city       String
  state      String
  zip        String
  country    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Landlord   Landlord? @relation(fields: [landlordId], references: [id])
  landlordId String?
}
